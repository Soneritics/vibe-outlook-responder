{
  "name": "vibe-outlook-responder",
  "version": "1.0.0",
  "description": "Outlook ChatGPT Email Responder Add-in",
  "main": "dist/taskpane/index.js",
  "scripts": {
    "build": "webpack --config config/webpack.config.js --mode production",
    "build:dev": "webpack --config config/webpack.config.js --mode development",
    "dev": "webpack serve --config config/webpack.config.js --mode development",
    "start": "office-addin-debugging start manifest/manifest.xml desktop",
    "stop": "office-addin-debugging stop manifest/manifest.xml",
    "validate": "office-addin-manifest validate manifest/manifest.xml",
    "lint": "eslint .",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "jest --config config/jest.config.js",
    "test:watch": "jest --config config/jest.config.js --watch",
    "test:coverage": "jest --config config/jest.config.js --coverage",
    "test:e2e": "playwright test --config config/playwright.config.ts",
    "prepare": "husky"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Soneritics/vibe-outlook-responder.git"
  },
  "keywords": [
    "outlook",
    "office-addin",
    "chatgpt",
    "ai",
    "email"
  ],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Soneritics/vibe-outlook-responder/issues"
  },
  "homepage": "https://github.com/Soneritics/vibe-outlook-responder#readme",
  "dependencies": {
    "@fluentui/react-components": "^9.72.11",
    "@microsoft/office-js": "^1.1.110",
    "openai": "^6.17.0",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "tiktoken": "^1.0.22",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@jest/globals": "^30.2.0",
    "@playwright/test": "^1.58.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^25.2.0",
    "@types/office-js": "^1.0.570",
    "@types/react": "^19.2.10",
    "@types/react-dom": "^19.2.3",
    "@types/uuid": "^10.0.0",
    "css-loader": "^7.1.3",
    "eslint": "^9.39.2",
    "html-webpack-plugin": "^5.6.6",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "office-addin-debugging": "^6.0.6",
    "office-addin-dev-certs": "^2.0.6",
    "office-addin-manifest": "^2.1.2",
    "prettier": "^3.8.1",
    "style-loader": "^4.0.0",
    "ts-jest": "^29.4.6",
    "ts-loader": "^9.5.4",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.54.0",
    "webpack": "^5.105.0",
    "webpack-cli": "^6.0.1",
    "webpack-dev-server": "^5.2.3"
  }
}
